      <div class="col-md-12">
        <div class="top-spacer"> </div>
      </div>
    </div> 
  </div><!-- /cont -->
  
</div>


<div class="container">
  <div class="row">
    
    <div class="col-md-12"> 
      
      <div class="panel">
        <div class="panel-body">
          <div class="container-fluid">
			  <div class="row">
				  <div class="col-sm-1 col-md-1">
				  	  <div class="profle_info text-center">
						  <a class="story-title" href="#"><img alt="profile picture" src="#" style="width:100px; height:100px"></a>
						  <br/>
						  <h4>Hello! Welcome</h4>
						  <br/>
					  </div>
				  </div>
				  <div class="col-sm-3 col-md-3 text-center">
					  <form class="form_upload" enctype="multipart/form-data"  action="/users/upload" method="post">
						  <input type="text" name="userEmail" value="<%=user.email%>" class="hidden_form">
						  <input type="text" name="userPassword" value="<%=user.password%>" class="hidden_form">
						  <input class="btn" id="file" name="file" type="file">
						  <input name="reciever" type="email" id="reciepient_email" placeholder="Reciepient's Email" required="required"><br/>
						  <br/>
						  <input name="title" type="text" placeholder="Title of item" required="required"><br/><br/>
						  <input type='text' placeholder="Item name would go here" title="Field Text cannot be changed" id="file_name" name="filename" readonly="readonly"><br/><br/>
						  <textarea name="description" placeholder="Description of Items" required="required"></textarea><br/>
						  <br/>
						  <input type="submit" class="btn btn-danger" value="SEND">
 					  </form>
				  </div>
				  <div class="col-sm-8 col-md-8 text-center">
					  <h3>Shared files history and to whom would go here</h3>
				  </div>
			  </div>
		  </div>
          
          
          <!--/stories-->
          <div class="row">    
            <br>
            <div class="col-md-2 col-sm-3 text-center">
            </div>
            <div class="col-md-10 col-sm-9">
            </div>
          </div>
          <!--/stories-->
        
        </div>
      </div>
                                                    
    </div><!--/col-12-->
  </div>
</div>
         

    <nav class="collapse navbar-collapse" role="navigation">
      <ul class="nav navbar-right navbar-nav">
        <li class="dropdown">
			<img class="img-circle" src="#" alt="img from profile">
          <ul class="dropdown-menu" style="padding:12px;">
            <form class="form-inline">
              <img alt="profile img" src="#" placeholder="picture from profile">
            </form>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>

<div id="masthead">  
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <h1>
          <p class="lead"></p>
        </h1>
      </div>
      <div class="col-md-5">
        <div class="well well-lg"> 
          <div class="row">
            <div class="col-sm-12">
              
      
            </div>
          </div>
        </div>
      </div>
    </div> 
  </div><!-- /cont -->
  
  <div class="container">
